<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masatokg.revlottery.MainActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="207dp"
        android:layout_height="84dp"
        android:text="@string/lbl_title"
        android:textSize="50sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seek_param"
        android:layout_width="460dp"
        android:layout_height="26dp"
        android:max="50"
        android:progress="25"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_Param"
        android:layout_marginStart="41dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="41dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_Param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_param"
        android:textSize="40sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="186dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="36dp" />

    <SeekBar
        android:id="@+id/seek_win"
        android:layout_width="457dp"
        android:layout_height="30dp"
        android:max="50"
        android:progress="10"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_lott"
        android:layout_marginTop="268dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="267dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="42dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_win"
        android:textSize="40sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="94dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_Param"
        android:layout_marginRight="36dp" />

    <Button
        android:id="@+id/btn_lott"
        android:layout_width="159dp"
        android:layout_height="80dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:text="@string/lott"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/img_result"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/lbl_result"
        android:layout_width="161dp"
        android:layout_height="72dp"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:text="@string/lott"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="290dp"
        android:layout_height="220dp"
        app:srcCompat="@drawable/s_woman"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="43dp" />

</android.support.constraint.ConstraintLayout>
